<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/f1"
    android:background="@color/Dark_green_bg"
    android:layout_height="match_parent"
    tools:context="com.acadgild.siddharth.merisafety.Main2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:layout_weight="2"
        >
        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:background="@drawable/myrect"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:text="Your location is Delhi"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="9">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            >
            <Button
                android:layout_width="200dp"
                android:background="@drawable/button"
                android:id="@+id/save_me"
                android:typeface="sans"
                android:textStyle="bold"
                android:textColor="@color/Light_grey_text"
                android:textSize="30dp"
                android:layout_centerInParent="true"
                android:text="Save\nMe"
                android:onClick="fun"
                android:layout_height="200dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="2"
            android:layout_height="match_parent"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:text="Medical"
                android:typeface="sans"
                android:textStyle="bold"
                android:textColor="@color/Light_grey_text"
                android:onClick="fun"
                android:id="@+id/medical"
                android:background="@drawable/button"
                android:layout_weight="3"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:text="Security "
                android:typeface="sans"
                android:textStyle="bold"
                android:textColor="@color/Light_grey_text"
                android:onClick="fun"
                android:id="@+id/security"
                android:background="@drawable/button"
                android:layout_weight="3"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:typeface="sans"
                android:textStyle="bold"
                android:textColor="@color/Light_grey_text"
                android:text="Travel"
                android:onClick="fun"
                android:id="@+id/travel"
                android:layout_margin="5dp"
                android:background="@drawable/button"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Self\nDefence"
                android:onClick="fun"
                android:textColor="@color/Light_grey_text"
                android:layout_margin="5dp"
                android:typeface="sans"
                android:textStyle="bold"
                android:id="@+id/self_defence"
                android:background="@drawable/button"
                android:layout_weight="3"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:layout_weight="2"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="1dp"
            android:background="@drawable/buttonb"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:onClick="fun"
                android:gravity="bottom|center_horizontal"
                android:typeface="sans"
                android:textStyle="bold"
                android:textColor="@color/Dark_grey_text"
                android:id="@+id/home"
                android:layout_margin="5dp"
                android:background="@drawable/homebl"
                android:layout_weight="9"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="Home"
                android:typeface="sans"
                android:textColor="@color/Dark_grey_text"
                android:textStyle="bold"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="1dp"
            android:background="@drawable/buttonb"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:onClick="fun"
                android:gravity="bottom|center_horizontal"
                android:typeface="sans"
                android:textStyle="bold"
                android:textColor="@color/Dark_grey_text"
                android:id="@+id/settings"
                android:layout_margin="5dp"
                android:background="@drawable/settings_revamped"
                android:layout_weight="9"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="Settings"
                android:typeface="sans"
                android:textColor="@color/Dark_grey_text"
                android:textStyle="bold"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="1dp"
            android:background="@drawable/buttonb"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:onClick="fun"
                android:typeface="sans"
                android:textColor="@color/Dark_grey_text"
                android:textStyle="bold"
                android:id="@+id/nearby_help"
                android:layout_margin="5dp"
                android:background="@drawable/nearby_icon"
                android:layout_weight="9"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="Nearby Help"
                android:typeface="sans"
                android:textColor="@color/Dark_grey_text"
                android:textStyle="bold"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="1dp"
            android:background="@drawable/buttonb"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:onClick="fun"
                android:typeface="sans"
                android:textColor="@color/Dark_grey_text"
                android:textStyle="bold"
                android:id="@+id/guar_details"
                android:layout_margin="5dp"
                android:background="@drawable/acc"
                android:layout_weight="9"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="Guardian"
                android:typeface="sans"
                android:textColor="@color/Dark_grey_text"
                android:textStyle="bold"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="1dp"
            android:background="@drawable/buttonb"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:onClick="fun"
                android:typeface="sans"
                android:textColor="@color/Dark_grey_text"
                android:id="@+id/feedback"
                android:layout_margin="5dp"
                android:background="@drawable/feedback_icon"
                android:layout_weight="9"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="Feedback"
                android:typeface="sans"
                android:textColor="@color/Dark_grey_text"
                android:textStyle="bold"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>






        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="1dp"
            android:background="@drawable/buttonb"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/Dark_grey_text"
                android:id="@+id/contact_us"
                android:onClick="fun"
                android:typeface="sans"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/contact_us_icon"
                android:layout_weight="9"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="Contact"
                android:typeface="sans"
                android:textColor="@color/Dark_grey_text"
                android:textStyle="bold"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
