<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#187638"
    tools:context="com.priya.cs.aptronproject.AptronProjectGuardian">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tv1"
    android:layout_margin="20dp"
    android:textSize="25dp"
    android:typeface="serif"
    android:gravity="center"
    android:textColor="#fff"
    android:text="REGISTER GUARDIAN"/>
    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:typeface="serif"

        android:text="Choose From Contacts"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:textSize="25dp"
        android:textColor="#fff"
        android:typeface="serif"
        android:layout_gravity="center"
        android:text="OR"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter guardian name"
        android:id="@+id/et1"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:typeface="serif"
        android:textSize="18dp"
        android:layout_marginLeft="25dp"

        android:layout_marginRight="25dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter guardian phone"
        android:id="@+id/et2"
        android:inputType="phone"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:typeface="serif"
        android:textSize="18dp"
        android:layout_marginLeft="25dp"

        android:layout_marginRight="25dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter email address"
        android:id="@+id/et3"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:typeface="serif"
        android:textSize="18dp"
        android:layout_marginLeft="25dp"

        android:layout_marginRight="25dp"
        />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#000"
        android:id="@+id/b2"
        android:textSize="20dp"
        android:text="Next"
        android:typeface="serif"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/b3"
            android:text="Skip"
            android:typeface="serif"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
   </LinearLayout>
</ScrollView>
