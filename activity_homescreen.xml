<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/Dark_green_bg"
    tools:context="com.developers.creators.paras.aptronprojectsafetyapp.HomescreenActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
        <TextView
            android:background="@color/Light_green_layouts"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:textColor="@color/Dark_grey_text"
            android:textAlignment="center"
            android:text="Your location is Delhi"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            >
            <Button
                android:layout_width="150dp"
                android:background="@color/Light_green_layouts"
                android:id="@+id/save_me"
                android:textColor="@color/Dark_grey_text"
                android:textSize="30dp"
                android:layout_centerInParent="true"
                android:text="Save\nMe"
                android:onClick="fun"
                android:layout_height="150dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:text="Medical"
                android:textColor="@color/Dark_grey_text"
                android:onClick="fun"
                android:id="@+id/medical"
                android:background="@color/Light_green_layouts"
                android:layout_weight="3"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:textColor="@color/Dark_grey_text"
                android:text="Security "
                android:onClick="fun"
                android:id="@+id/security"
                android:background="@color/Light_green_layouts"
                android:layout_weight="3"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:textColor="@color/Dark_grey_text"
                android:text="Travel"
                android:onClick="fun"
                android:id="@+id/travel"
                android:layout_margin="5dp"
                android:background="@color/Light_green_layouts"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Self\nDefence"
                android:onClick="fun"
                android:textColor="@color/Dark_grey_text"
                android:layout_margin="5dp"
                android:id="@+id/self_defence"
                android:background="@color/Light_green_layouts"
                android:layout_weight="3"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Settings"
            android:onClick="fun"
            android:textColor="@color/Dark_grey_text"
            android:id="@+id/settings"
            android:layout_margin="5dp"
            android:background="@color/Light_green_layouts"
            android:layout_weight="2"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Nearby Help"
            android:onClick="fun"
            android:textColor="@color/Dark_grey_text"
            android:id="@+id/nearby_help"
            android:layout_margin="5dp"
            android:background="@color/Light_green_layouts"
            android:layout_weight="2"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Feedback"
            android:onClick="fun"
            android:textColor="@color/Dark_grey_text"
            android:id="@+id/feedback"
            android:layout_margin="5dp"
            android:background="@color/Light_green_layouts"
            android:layout_weight="2"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Contact\nUs"
            android:textColor="@color/Dark_grey_text"
            android:id="@+id/contact_us"
            android:onClick="fun"
            android:layout_margin="5dp"
            android:background="@color/Light_green_layouts"
            android:layout_weight="2"
            />
    </LinearLayout>
</LinearLayout>
