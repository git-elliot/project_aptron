<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv1"
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="34dp"
        app:srcCompat="@mipmap/audiorec" />

    <View
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/iv1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="34dp"
        android:layout_toRightOf="@id/iv1"
        android:background="@color/colorPrimary"
        android:visibility="visible"></View>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Audio Recording" />

        <ToggleButton
            android:id="@+id/tb1"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="49dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="34dp"
            app:srcCompat="@mipmap/videoweb" />

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_alignRight="@id/iv2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@id/iv2"
            android:background="@color/colorPrimary"
            android:visibility="visible"></View>

        <TextView
            android:id="@+id/tv2"
            android:layout_weight="1"
            android:textColor="#fff"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Video Recording" />
        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv3"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="34dp"
            app:srcCompat="@mipmap/emergency" />

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_alignRight="@id/iv3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@id/iv3"
            android:background="@color/colorPrimary"
            android:visibility="visible"></View>

        <TextView
            android:id="@+id/tv3"
            android:layout_weight="1"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="Emergency Calling" />
        <ToggleButton
            android:id="@+id/tb3"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="47dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="34dp"
            app:srcCompat="@drawable/trigger" />

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_alignRight="@id/iv4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@id/iv4"
            android:background="@color/colorPrimary"
            android:visibility="visible"></View>

        <TextView
            android:id="@+id/tv4"
            android:layout_weight="1"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_height="wrap_content"

            android:text="Trigger" />
        <ToggleButton
            android:id="@+id/tb4"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>