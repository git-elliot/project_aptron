<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Dark_green_bg"
        android:orientation="vertical"
    tools:context="com.developers.droidteam.merisafety.Frag_guardian">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_height="0dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:id="@+id/tv1"
                android:textSize="25dp"
                android:typeface="serif"
                android:gravity="center"
                android:textColor="#fff"
                android:text="REGISTER GUARDIAN"/>
            <Button

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:id="@+id/b1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textSize="20dp"
                android:background="@drawable/round_button"
                android:typeface="serif"

                android:text="Choose From Contacts"/>

            <TextView

                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:text="OR"
                android:textColor="#fff"
                android:textSize="25dp"
                android:typeface="serif" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:hint="Enter guardian name"
                android:id="@+id/et1"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:typeface="serif"
                android:textSize="18dp"
                android:layout_marginLeft="25dp"

                android:layout_marginRight="25dp"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:hint="Enter guardian phone"
                android:id="@+id/et2"
                android:inputType="number"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:typeface="serif"
                android:textSize="18dp"
                android:layout_marginLeft="25dp"

                android:layout_marginRight="25dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:hint="Enter email address"
                android:id="@+id/et3"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:typeface="serif"
                android:textSize="18dp"
                android:layout_marginLeft="25dp"

                android:layout_marginRight="25dp"
                /></LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:id="@+id/b2"
                android:textSize="20dp"
                android:background="@drawable/round_button"
                android:text="Next"
                android:typeface="serif"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:textColor="#000"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/b3"
                android:text="Skip"
                android:typeface="serif"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
    </LinearLayout>

